.container {
  display: inline-flex;
  flex-direction: column;
  width: 100%;
}

.header {
  width: 100%;
  height: 450rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  background-color: #15397C;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.title {
  color: #fff;
  margin-top: 65rpx;
  font-size: 26rpx;
}

.nickname {
  color: #fff;
  margin-bottom: 105rpx;
  font-size: 26rpx;
}

.avatar-container {
  margin-bottom: 100rpx;
}